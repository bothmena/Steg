<?xml version="1.0" encoding="UTF-8"?>

<?import com.jfoenix.controls.JFXTextField?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<BorderPane fx:controller="com.bothmena.dialog.RegionDialog" styleClass="dialog" xmlns="http://javafx.com/javafx/8.0.65" xmlns:fx="http://javafx.com/fxml/1">
    <top>
        <HBox styleClass="dialog-header" alignment="TOP_CENTER" BorderPane.alignment="CENTER">
            <Label text="Nouvelle Region"/>
        </HBox>
    </top>
    <center>
        <VBox styleClass="dialog-body">
            <JFXTextField fx:id="name" labelFloat="true" promptText="Nom Region" />
            <Label fx:id="logLabel" styleClass="form-error" VBox.vgrow="ALWAYS" />
        </VBox>
    </center>
</BorderPane>
